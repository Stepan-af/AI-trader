# Environment Variables
# Copy this to .env and fill in your values

# Environment (Required)
NODE_ENV=development
PORT=3000

# Database (Required)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ai_trader

# Redis (Required)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=  # Optional, leave empty for local dev without auth
REDIS_DB=0

# JWT (Required for all modes)
# SECURITY: Generate a strong secret with: openssl rand -hex 32
# WARNING: Never commit real secrets to git
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=24h

# Binance API (Required for LIVE mode only, not needed for PAPER mode)
# Get from https://www.binance.com/en/my/settings/api-management
BINANCE_API_KEY=
BINANCE_API_SECRET=
