# Production Environment Variables Template
# Copy this to .env for production deployment

# CRITICAL: Set secure passwords and secrets
# Generate JWT secret: openssl rand -hex 32

# Environment
NODE_ENV=production

# Database Configuration
POSTGRES_DB=ai_trader
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_SECURE_PASSWORD
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PASSWORD=CHANGE_ME_SECURE_REDIS_PASSWORD
REDIS_PORT=6379

# JWT Authentication (REQUIRED)
# Generate: openssl rand -hex 32
JWT_SECRET=CHANGE_ME_MINIMUM_32_CHARACTERS_REQUIRED
JWT_EXPIRES_IN=24h

# API Endpoints (For frontend to connect)
# Use internal service names for docker-compose
# Use public URLs for external deployments
NEXT_PUBLIC_API_BASE_URL=http://backend:3000
NEXT_PUBLIC_WS_URL=ws://backend:3000

# Service Ports
BACKEND_PORT=3000
FRONTEND_PORT=3001

# Binance API (Required for LIVE trading, optional for PAPER mode)
BINANCE_API_KEY=
BINANCE_API_SECRET=
